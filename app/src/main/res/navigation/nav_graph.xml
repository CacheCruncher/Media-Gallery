<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/albumFragment">

    <fragment
        android:id="@+id/albumFragment"
        android:name="com.jawahir.mediagallery.ui.AlbumFragment"
        android:label="AlbumFragment" >
        <action
            android:id="@+id/action_albumFragment_to_albumDetailFragment"
            app:destination="@id/albumDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/albumDetailFragment"
        android:name="com.jawahir.mediagallery.ui.AlbumDetailFragment"
        android:label="AlbumDetailFragment">
        <argument
            android:name="albumModel"
            app:argType="com.jawahir.mediagallery.ui.uimodels.AlbumUIModel" />

    </fragment>
</navigation>